public class KitchenPlanInfoDesk extends BaseResource {

     @Post("json")
    public String doPost(){
        DataPackage dp = new DataPackage();
        KitchenAction a = new KitchenAction();
         a.setClient(client);
        Map data = a.planInfoDesk(form);
        dp.getData().put("INFO", data);
        return dp.toJSON();
    }
}
