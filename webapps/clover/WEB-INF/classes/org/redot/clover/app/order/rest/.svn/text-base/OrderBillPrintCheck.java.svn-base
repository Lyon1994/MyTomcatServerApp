public class OrderBillPrintCheck extends BaseResource {

    @Post("json")
    public String doPost(){
        DataPackage dp = new DataPackage();
        //OrderBillAction a = new OrderBillAction();
        String BILL_ID = StringUtils.toString(form.getFirstValue("BILL_ID"));
        if(BILL_ID.length() == 0){
            dp.setStatus(0);
        }
        else{
            Map params = new Hashtable();
            params.put("BILL_ID", BILL_ID);
            PrintManager.getInstance().addJob(PrintJob.COMMAND_ORDER_BILL_CHECK,params);
            dp.setStatus(1);
        }
        return dp.toJSON();
    }
}
