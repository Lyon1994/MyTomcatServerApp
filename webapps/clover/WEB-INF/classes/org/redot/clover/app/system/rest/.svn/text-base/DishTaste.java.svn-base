public class DishTaste extends BaseResource {

    @Get("json")
    public String doGet() {
        DataPackage dp = new DataPackage();
        DictAction a = new DictAction();
        List<Map> list = a.getDict("DISH/TASTE");
        if (list == null) {
            return dp.toJSON();
        }
        dp.getData().put("DICT", list);
        return dp.toJSON();
    }

    @Post("json")
    public String doPost() {
        DataPackage dp = new DataPackage();
        DictAction a = new DictAction();
        dp.setStatus(a.setDict("DISH/TASTE", form));
        return dp.toJSON();
    }
}
