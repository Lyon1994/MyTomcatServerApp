public class OrderBillCheckout extends BaseResource {

    @Post("json")
    public String doPost(){
        DataPackage dp = new DataPackage();
        OrderBillAction a = new OrderBillAction();
        a.setClient(client);
        dp.setStatus(a.checkout(form));
        return dp.toJSON();
    }
}
