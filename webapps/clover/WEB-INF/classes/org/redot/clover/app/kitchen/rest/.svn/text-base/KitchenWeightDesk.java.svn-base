public class KitchenWeightDesk extends BaseResource {

    @Get("json")
    public String doGet(){
        DataPackage dp = new DataPackage();
        KitchenAction a = new KitchenAction();
        dp.getData().put("INFO", a.weightDesk());
        return dp.toJSON();
    }
}
