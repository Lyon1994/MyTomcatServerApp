public class OrderDishUrgent extends BaseResource {

    @Post("json")
    public String doPost() {
        DataPackage dp = new DataPackage();
        OrderDishAction a = new OrderDishAction();
        a.setClient(client);
        dp.setStatus(a.urgent(form));
        return dp.toJSON();
    }

}
