public class ItemTypeSmall extends BaseResource{

    @Get("json")
    public String doGet(){
        DataPackage dp = new DataPackage();
        ItemAction a = new ItemAction();
        dp.addTable("table", a.listSmall(null, StringUtils.toString(getRequestAttributes().get("PARENT"))), null, null);
        return dp.toJSON();
    }

    @Post("json")
    public String doPost(){
        DataPackage dp = new DataPackage();
        ItemAction a = new ItemAction();
        Map data = a.setSmall(form);
        dp.setStatus(NumberUtils.toInt(data.get("STATUS")));
        dp.getData().put("form",data);
        return dp.toJSON();
    }

    @Put("json")
    public String doDelete(){
        DataPackage dp = new DataPackage();
        ItemAction a = new ItemAction();
        dp.setStatus(a.deleteSmall(form));
        return dp.toJSON();
    }
}
