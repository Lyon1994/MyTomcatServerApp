public class KitchenWeightProduct extends BaseResource {

    @Get("json")
    public String doGet(){
        DataPackage dp = new DataPackage();
        KitchenAction a = new KitchenAction();
        Map data = a.weightProduct();
        dp.getData().put("INFO", data);
        return dp.toJSON();
    }
}
