public class PrmsTree extends BaseResource{

    @Get("json")
    public String doGet(){
        DataPackage dp = new DataPackage();
        PrmsAction a = new PrmsAction();
        dp.getData().put("ITEMS", a.tree(null));
        return dp.toJSON();
    }
}
