public class LogList extends BaseResource {
    @Post("json")
    public String doPost() {
        DataPackage dp = new DataPackage();
        LogAction a = new LogAction();
        dp.addTable("table", a.list(form));
        String str = dp.toJSON();
//        System.out.println(str);
        return str;
    }
}
