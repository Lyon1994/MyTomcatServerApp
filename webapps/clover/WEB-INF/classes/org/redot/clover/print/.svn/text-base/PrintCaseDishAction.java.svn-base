public class PrintCaseDishAction  extends BaseAction {
    public  int updatedish(Form form)
    {
        Map data = form.getValuesMap();
        String CASE_ID = StringUtils.toString(data.get("CASE_ID"));
        String CASE_PSX= StringUtils.toString(data.get("CASE_PSX"));
        int result=0;
        String COUNT="0";
        if(CASE_PSX.length()>0)
        {
            COUNT=CASE_PSX;
        }
        String sql="UPDATE  X_PRINT_CASE A  SET A.CASE_PSX='"+COUNT+"' WHERE A.CASE_ID="+CASE_ID;
        IQuery query=getQuery();
        result=query.doExec(sql);
        if(result < 0){
            return CloverManager.CODE_FAILED;
        }

        return CloverManager.CODE_SUCCESS;
    }
}
